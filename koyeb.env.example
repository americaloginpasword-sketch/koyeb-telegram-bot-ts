# @file: koyeb.env.example
# @description: Пример переменных окружения для деплоя на Koyeb
# @created: 2025-01-27

# Основные настройки
NODE_ENV=production
PORT=3000

# Telegram Bot (создайте секреты в Koyeb)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-app-name.koyeb.app/telegram/webhook

# Google Sheets Analytics (опционально - для аналитики)
# Инструкция: GOOGLE_API_SETUP.md
SHEET_ID=your_google_sheet_id_here
GOOGLE_SA_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Логирование
LOG_LEVEL=info

# Безопасность
VERIFY_WEBHOOKS=true
