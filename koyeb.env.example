# @file: koyeb.env.example
# @description: Пример переменных окружения для деплоя на Koyeb
# @created: 2025-01-27

# Основные настройки
NODE_ENV=production
PORT=3000

# Telegram Bot (создайте секреты в Koyeb)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-app-name.koyeb.app/telegram/webhook

# Google Sheets Analytics (создайте секреты в Koyeb)
SHEET_ID=your_google_sheet_id
GOOGLE_SA_EMAIL=your_service_account_email
GOOGLE_SA_PRIVATE_KEY_PATH=.secrets/google-sa.json

# Логирование
LOG_LEVEL=info

# Безопасность
VERIFY_WEBHOOKS=true
